{
    "listeners": {
        "*:8020": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "uri": [
                    "*.css",
                    "*.ico",
                    "*.jpg",
                    "*.js",
                    "*.png",
                    "*.xml",
                    "*.html",
                    "*.htm"
                ]
            },
            "action": {
                "share": "/www/"
            }
        },
        {
            "action": {
                "pass": "applications/php"
            }
        }
    ],
    "applications": {
        "php": {
            "type": "php",
            "processes": {
                "max": 20,
                "spare": 1,
                "idle_timeout": 10
            },
            "root": "/www",
            "index": "index.php"
        }
    }
}