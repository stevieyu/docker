{
    "listeners": {
        "*:8020": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "uri": "!/index.php"
            },
            "action": {
                "share": "/www/",
                "fallback": {
                    "pass": "applications/php"
                }
            }
        }
    ],
    "applications": {
        "php": {
            "type": "php",
            "root": "/www/",
            "index": "index.php",
            "script": "index.php",
            "processes": {
                "max": 10,
                "spare": 1,
                "idle_timeout": 5
            },
            "options": {
                "user": {
                    "display_errors": "On"
                }
            }
        }
    }
}